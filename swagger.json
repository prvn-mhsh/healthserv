{
  "openapi": "3.0.0",
  "info": {
    "title": "Misc Service - Articles API",
    "version": "1.0.0",
    "description": "Articles module for doctors, admins, and users"
  },
  "servers": [
    { "url": "http://localhost:4004" }
  ],
  "security": [
    { "bearerAuth": [] }
  ],
  "tags": [
    { "name": "BMI", "description": "Endpoints for BMI calculations and data" },
    { "name": "Doctor", "description": "Endpoints for Doctors to create, update, and submit articles" },
    { "name": "Admin", "description": "Endpoints for Admin to approve, reject, and delist articles" },
    { "name": "User", "description": "Endpoints for Users to view and report articles" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Article": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "summary": { "type": "string" },
          "content": { "type": "string" },
          "mainImage": { "type": "string", "description": "URL of the main image" },
          "images": { "type": "array", "items": { "type": "string" }, "description": "Additional image URLs" },
          "authorId": { "type": "integer" },
          "authorName": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "status": { "type": "string", "enum": ["DRAFT", "PENDING_APPROVAL", "PUBLISHED", "REJECTED", "DELISTED"] }
        }
      },
      "ArticleList": { "type": "array", "items": { "$ref": "#/components/schemas/Article" } },
      "ArticlePage": {
        "type": "object",
        "properties": {
          "page": { "type": "integer", "example": 1 },
          "perPage": { "type": "integer", "example": 10 },
          "total": { "type": "integer", "example": 42 },
          "totalPages": { "type": "integer", "example": 5 },
          "articles": { "$ref": "#/components/schemas/ArticleList" }
        }
      },
      "ReportRequest": { "type": "object", "properties": { "notes": { "type": "string" } } },
      "RejectRequest": { "type": "object", "properties": { "reason": { "type": "string" } } }
    }
  },
  "paths": {
    "/bmi/{userId}": {
      "get": {
        "tags": ["BMI"],
        "summary": "Get BMI data for a user",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "userId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": {
            "description": "BMI data retrieved successfully",
            "content": { "application/json": { "schema": { "type": "object", "properties": { "status": { "type": "boolean" }, "status_code": { "type": "integer" }, "data": { "type": "object" } } } } }
          },
          "400": { "description": "Bad request or error processing BMI" },
          "401": { "description": "Unauthorized - Authorization token required" }
        }
      }
    },
    "/doctor/articles": {
      "post": {
        "tags": ["Doctor"],
        "summary": "Create article draft",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "summary", "content"],
                "properties": {
                  "title": { "type": "string", "example": "Benefits of Morning Walk" },
                  "summary": { "type": "string", "example": "Short health benefits of walking daily." },
                  "content": { "type": "string", "example": "Walking daily improves heart health and mental well-being." },
                  "tags": { "type": "array", "items": { "type": "string" }, "example": ["fitness", "cardiology"] },
                  "mainImage": { "type": "string", "example": "https://cdn.example.com/articles/1/main.jpg" },
                  "images": { "type": "array", "items": { "type": "string" }, "example": ["https://cdn.example.com/articles/1/1.jpg", "https://cdn.example.com/articles/1/2.jpg"] }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Article created successfully",
            "content": { "application/json": { "schema": { "type": "object", "properties": { "articleId": { "type": "integer", "example": 12 }, "status": { "type": "string", "example": "DRAFT" } } } } }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden - Not a doctor" },
          "500": { "description": "Failed to create article" }
        }
      }
      ,
      "get": {
        "tags": ["Doctor"],
        "summary": "List doctor's articles (paginated)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "perPage", "in": "query", "schema": { "type": "integer", "default": 10 } }
        ],
        "responses": {
          "200": {
            "description": "Paginated list of doctor's articles",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ArticlePage" } } }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden - Not a doctor" }
        }
      }
    },
    "/doctor/articles/search": {
      "get": {
        "tags": ["Doctor"],
        "summary": "Search doctor's articles with filters and pagination",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "perPage", "in": "query", "schema": { "type": "integer", "default": 10 } },
          { "name": "title", "in": "query", "schema": { "type": "string" }, "description": "Partial article title to search for" },
          { "name": "status", "in": "query", "schema": { "type": "string" }, "description": "Article status (DRAFT, PENDING_APPROVAL, PUBLISHED, REJECTED, DELISTED)" },
          { "name": "startDate", "in": "query", "schema": { "type": "string", "format": "date" }, "description": "ISO start date (inclusive)" },
          { "name": "endDate", "in": "query", "schema": { "type": "string", "format": "date" }, "description": "ISO end date (inclusive)" }
        ],
        "responses": {
          "200": {
            "description": "Paginated search results",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ArticlePage" } } }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden - Not a doctor" }
        }
      }
    },
    "/doctor/articles/{id}": {
      "put": {
        "tags": ["Doctor"],
        "summary": "Update article (only draft)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "type": "object", "properties": { "title": { "type": "string" }, "summary": { "type": "string" }, "content": { "type": "string" }, "tags": { "type": "array", "items": { "type": "string" } } } }
            }
          }
        },
        "responses": {
          "200": { "description": "Draft updated" },
          "403": { "description": "Cannot update article (not owner or not draft)" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/doctor/articles/{id}/submit": {
      "post": {
        "tags": ["Doctor"],
        "summary": "Submit article for approval",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "Submitted for approval" }, "403": { "description": "Cannot submit article (not owner or wrong status)" } }
      }
    },
    "/admin/articles": {
      "get": {
        "tags": ["Admin"],
        "summary": "Get all articles (filtered and paginated)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "perPage", "in": "query", "schema": { "type": "integer", "default": 10 } },
          { "name": "status", "in": "query", "schema": { "type": "string" }, "description": "Filter by article status" },
          { "name": "doctorName", "in": "query", "schema": { "type": "string" }, "description": "Filter by doctor name" },
          { "name": "startDate", "in": "query", "schema": { "type": "string", "format": "date" }, "description": "Filter articles from start date" },
          { "name": "endDate", "in": "query", "schema": { "type": "string", "format": "date" }, "description": "Filter articles until end date" }
        ],
        "responses": {
          "200": {
            "description": "Paginated list of articles",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ArticlePage" } } }
          },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Failed to fetch articles" }
        }
      }
    },
    "/admin/articles/pending": {
      "get": {
        "tags": ["Admin"],
        "summary": "View pending articles",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "List of pending articles", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ArticleList" } } } } }
      }
    },
    "/admin/articles/{id}": {
      "patch": {
        "tags": ["Admin"],
        "summary": "Consolidated endpoint to approve, reject, delist articles or handle reports",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["action"],
                "properties": {
                  "action": { "type": "string", "enum": ["APPROVE", "REJECT", "DELIST", "DISCARD_REPORT", "POST_REPORT"], "description": "Action to perform on article or report" },
                  "reason": { "type": "string", "description": "Reason for rejection or delisting" },
                  "reportId": { "type": "integer", "description": "Required for report-related actions (DISCARD_REPORT, POST_REPORT)" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Action completed successfully" },
          "400": { "description": "Bad request - invalid action or missing required parameters" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Failed to update article" }
        }
      }
    },
    "/admin/articles/{id}/reports": {
      "get": {
        "tags": ["Admin"],
        "summary": "Get reports for an article",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": {
            "description": "List of reports for the article",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "articleId": { "type": "integer" },
                      "notes": { "type": "string" },
                      "status": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Failed to fetch reports" }
        }
      }
    },
    "/admin/articles/{id}/approve": {
      "post": {
        "tags": ["Admin"],
        "summary": "Approve article",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "Article approved" } }
      }
    },
    "/admin/articles/{id}/reject": {
      "post": {
        "tags": ["Admin"],
        "summary": "Reject article",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/RejectRequest" } } } },
        "responses": { "200": { "description": "Article rejected" } }
      }
    },
    "/admin/articles/{id}/delist": {
      "post": {
        "tags": ["Admin"],
        "summary": "Delist article",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "reason": { "type": "string" } } } } } },
        "responses": { "200": { "description": "Article delisted" } }
      }
    },
    "/patient/articles": {
      "get": {
        "tags": ["User"],
        "summary": "View published articles (paginated)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "perPage", "in": "query", "schema": { "type": "integer", "default": 10 } }
        ],
        "responses": {
          "200": {
            "description": "Paginated published articles",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ArticlePage" } } }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/patient/articles/search": {
      "get": {
        "tags": ["User"],
        "summary": "Search published articles with filters and pagination",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "perPage", "in": "query", "schema": { "type": "integer", "default": 10 } },
          { "name": "title", "in": "query", "schema": { "type": "string" }, "description": "Partial article title to search for" },
          { "name": "publisherName", "in": "query", "schema": { "type": "string" }, "description": "Partial publisher/author name to search for" },
          { "name": "startDate", "in": "query", "schema": { "type": "string", "format": "date" }, "description": "ISO start date (inclusive)" },
          { "name": "endDate", "in": "query", "schema": { "type": "string", "format": "date" }, "description": "ISO end date (inclusive)" }
        ],
        "responses": {
          "200": {
            "description": "Paginated search results",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ArticlePage" } } }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/patient/articles/{id}": {
      "get": {
        "tags": ["User"],
        "summary": "Get article details (with images and comments)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": {
            "description": "Article details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" },
                    "title": { "type": "string" },
                    "mainImage": { "type": "string" },
                    "images": { "type": "array", "items": { "type": "string" } },
                    "content": { "type": "string" },
                    "authorName": { "type": "string" },
                    "publishedAt": { "type": "string", "format": "date-time" },
                    "comments": { "type": "array", "items": { "type": "object", "properties": { "id": { "type": "integer" }, "author_name": { "type": "string" }, "content": { "type": "string" }, "created_at": { "type": "string" } } } }
                  }
                }
              }
            }
          },
          "404": { "description": "Article not found" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/patient/articles/{id}/report": {
      "post": {
        "tags": ["User"],
        "summary": "Report article abuse",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ReportRequest" } } } },
        "responses": { "201": { "description": "Article reported" } }
      }
    }
  }
}
